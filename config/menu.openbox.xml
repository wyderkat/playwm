<?xml version="1.0" encoding="UTF-8"?>

<!-- MUST TO READ - HEADER

  In this simple file you can change your main menu.

  Start reading it to understand structure.

  Here is full list of actions you can connect menu items to:
   http://openbox.org/wiki/Help:Actions
  But probably you will be using just Execute action.


 Full documentation can be found here:
   http://openbox.org/wiki/Help:Menus

END OF HEADER -->

<openbox_menu>

<!-- root-menu is the hard-coded name of main menu,
     Don't change it.  --> 
<menu id="root-menu" label="PlayWM">

  <!-- item under menu -->
  <item label="Term">
    <action name="Execute"><execute>urxvt</execute></action>
  </item>

  <item label="WWW">
    <action name="Execute"><execute>firefox</execute></action>
  </item>

  <!-- nested menu element is submenu. 
    <menu id="submenu1" label="Submenu">
      <item label="test"/>
    </menu>
  -->
  <!-- In following line we are using system submenu for Ubuntu/Debian --> 
  <menu id="/Debian" />

  <separator />

  <item label="Reconfigure">
    <action name="Reconfigure" />
  </item>
  <item label="Restart">
    <action name="Restart" />
  </item>
  <item label="Exit">
    <action name="Exit" />
  </item>
</menu>

</openbox_menu>
