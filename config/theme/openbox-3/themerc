# PlayWM theme based on Phoenix theme by lastchancetosee
# Documentation on OpenBox themes can be found on the OpenBox wiki
# http://openbox.org/wiki/Help:Themes

# Windows
# Window geometry
padding.width: 1
border.width: 1
window.client.padding.width: 0
window.client.padding.height: 0
window.handle.width: 0

# Border colors
window.active.border.color: #cfcfcf
window.inactive.border.color: #cfcfcf
window.active.client.color: #cfcfcf
window.inactive.client.color: #3E3C3A
window.active.title.separator.color:  #565656
window.inactive.title.separator.color: #565656

# Text shadows
window.active.label.text.font: shadow=n
window.inactive.label.text.font: shadow=n

# Window title justification
window.label.text.justify: center

# Active window
window.active.title.bg: Flat Gradient Vertical
window.active.title.bg.color: #222222
window.active.title.bg.colorTo: #565656
window.active.label.bg: Parentrelative
window.active.label.text.color: #fafafa

window.active.handle.bg: Flat Gradient Vertical
window.active.handle.bg.color: #3E3C3A
window.active.handle.bg.colorTo: #3E3C3A

window.active.grip.bg: Flat Solid
window.active.grip.bg.color: #3E3C3A


window.active.button.unpressed.bg: ParentRelative
window.active.button.unpressed.image.color: #bbbbbb

window.active.button.pressed.bg: ParentRelative
window.active.button.pressed.image.color: #ffffff

window.active.button.disabled.bg: ParentRelative
window.active.button.disabled.image.color: #bbbbbb

window.active.button.toggled.bg: ParentRelative
window.active.button.toggled.image.color: #fbd3a7

window.active.button.hover.bg: ParentRelative
window.active.button.hover.image.color: #fbd3a7

# Inactive windows
