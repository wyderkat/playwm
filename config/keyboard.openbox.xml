<!--   1) KEY COMBINATIONS
  General key combination sytax is
  Modifier-...-Key
  where Modifier can be one of these characters
    S     Shift key
    C     Control key
    A     Alt key
    W     Windows key
    M     Meta key
 You can add as many modifiers as you want. 

  Example of key combinations:
    S-A-Tab
  When holding pressed Shift and ALt keys user stroke Tab key. 
-->

<!--   2) KEY NAMES
  Most key names are the one letter symbols. For example name for "j" key is "j". 
  But for special keys you can use "find_key_name" application.
  Stroke key when find_key_name window has focus.
-->

<!--   3) POSSIBLE ACTIONS
  List of possible actions which you can connect to keys strokes is long and boring. 
  Please check out this page, I will not copy it here. 
   http://openbox.org/wiki/Help:Actions
-->
 

<keyboard>
<!--   4) EXAMPLE -->

  <keybind key="W-space">
    <action name="ToggleMaximize"> </action>
  </keybind>
  <keybind key="W-q">
    <action name="Close"> </action>
  </keybind>
  <keybind key="W-n">
    <action name="Iconify"> </action>
  </keybind>
  <keybind key="W-s">
    <action name="ToggleShade"> </action>
  </keybind>
  <keybind key="W-f">
    <action name="ToggleFullscreen"> </action>
  </keybind>
  <keybind key="W-m">
    <action name="ShowMenu"> <menu>client-menu</menu> </action>
  </keybind>
  <keybind key="W-Left">
    <action name="GoToDesktop"> <to>left</to> <wrap>no</wrap> </action>
  </keybind>
  <keybind key="W-h">
    <action name="GoToDesktop"> <to>left</to> <wrap>no</wrap> </action>
  </keybind>
  <keybind key="W-j">
    <action name="GoToDesktop"> <to>left</to> <wrap>no</wrap> </action>
  </keybind>
  <keybind key="W-Right">
    <action name="GoToDesktop"> <to>right</to> <wrap>no</wrap> </action>
  </keybind>
  <keybind key="W-l">
    <action name="GoToDesktop"> <to>right</to> <wrap>no</wrap> </action>
  </keybind>
  <keybind key="W-k">
    <action name="GoToDesktop"> <to>right</to> <wrap>no</wrap> </action>
  </keybind>
  <keybind key="S-W-Left">
    <action name="SendToDesktop"> <to>left</to> <wrap>no</wrap> </action>
  </keybind>
  <keybind key="S-W-j">
    <action name="SendToDesktop"> <to>left</to> <wrap>no</wrap> </action>
  </keybind>
  <keybind key="S-W-Right">
    <action name="SendToDesktop"> <to>right</to> <wrap>no</wrap> </action>
  </keybind>
  <keybind key="S-W-k">
    <action name="SendToDesktop"> <to>right</to> <wrap>no</wrap> </action>
  </keybind>
  <keybind key="W-F1">
    <action name="GoToDesktop"> <to>1</to> </action>
  </keybind>
  <keybind key="W-F2">
    <action name="GoToDesktop"> <to>2</to> </action>
  </keybind>
  <keybind key="W-F3">
    <action name="GoToDesktop"> <to>3</to> </action>
  </keybind>
  <keybind key="W-F4">
    <action name="GoToDesktop"> <to>4</to> </action>
  </keybind>
  <keybind key="W-F5">
    <action name="GoToDesktop"> <to>5</to> </action>
  </keybind>
  <keybind key="W-F6">
    <action name="GoToDesktop"> <to>6</to> </action>
  </keybind>
  <keybind key="W-F7">
    <action name="GoToDesktop"> <to>7</to> </action>
  </keybind>
  <keybind key="W-d">
    <action name="ToggleShowDesktop"/>
  </keybind>
  <keybind key="W-Escape">
    <action name="Lower"/>
    <action name="FocusToBottom"/>
    <action name="Unfocus"/>
  </keybind>
  <keybind key="W-Print">
    <action name="Execute"> <command>gnome-screenshot -w</command> </action>
  </keybind>
  <keybind key="A-Tab">
    <action name="NextWindow">
      <finalactions>
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </finalactions>
    </action>
  </keybind>
  <keybind key="W-Tab">
    <action name="NextWindow">
      <finalactions>
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </finalactions>
    </action>
  </keybind>
  <keybind key="A-S-Tab">
    <action name="PreviousWindow">
      <finalactions>
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </finalactions>
    </action>
  </keybind>
  <keybind key="W-S-Tab">
    <action name="PreviousWindow">
      <finalactions>
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </finalactions>
    </action>
  </keybind>
  <keybind key="XF86AudioRaiseVolume">
    <action name="Execute">
      <command>amixer -q sset Master 1+</command>
    </action>
  </keybind>
  <keybind key="XF86AudioLowerVolume">
    <action name="Execute">
      <command>amixer -q sset Master 1-</command>
    </action>
  </keybind>
</keyboard>

