#!/bin/bash

DOT="$HOME/.playwm"
AUTOSTART="$DOT/autostart.openbox.sh"
OPENBOXCONFIG="$DOT/windows.openbox.xml"
LOG="$DOT/log"

# Clean up after GDM
#xprop -root -remove _NET_NUMBER_OF_DESKTOPS \
#      -remove _NET_DESKTOP_NAMES \
#      -remove _NET_CURRENT_DESKTOP 2> /dev/null

if [ ! -d "$DOT" ];
then
  mkdir "$DOT"
fi
if [ ! -d "$LOG" ];
then
  mkdir "$LOG"
fi

for c in /usr/lib/playwm/config/* ;
do
  cb=`basename $c`
  if [ ! -e "$DOT/$cb" ];
  then
    cp -r "$c" "$DOT"
    sed -i "s|_PLAYWM_REPLACE_HOME_|$HOME|" "$DOT/$cb"
  fi
done
mkdir -p ~/.themes
ln -sf "$DOT/theme" ~/.themes/PlayWM


exec /usr/bin/openbox --startup "bash $AUTOSTART" --config-file "$OPENBOXCONFIG" "$@" &> $LOG/openbox
