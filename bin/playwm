#!/bin/bash

DOT="$HOME/.playwm"
AUTOSTART="$DOT/autostart.openbox.sh"
OPENBOX_CONF="$DOT/windows.openbox.xml"
LOG="$DOT/log"
THEMES="$HOME/.themes"
FONTS_CONF_D="$HOME/.fonts.conf.d"

# Clean up after GDM
#xprop -root -remove _NET_NUMBER_OF_DESKTOPS \
#      -remove _NET_DESKTOP_NAMES \
#      -remove _NET_CURRENT_DESKTOP 2> /dev/null

if [ ! -d "$DOT" ];
then
  mkdir "$DOT"
fi
if [ ! -d "$LOG" ];
then
  mkdir "$LOG"
fi
if [ ! -d "$THEMES" ];
then
  mkdir "$THEMES"
fi
if [ ! -d "$FONTS_CONF_D" ];
then
  mkdir "$FONTS_CONF_D"
fi

update-playwm &> $LOG/update-playwm

ln -sf "$DOT/theme" ~/.themes/PlayWM
ln -sf "$DOT/fonts.conf" "$FONTS_CONF_D/playwm.fonts.conf"


exec /usr/bin/openbox --startup "bash $AUTOSTART" --config-file "$OPENBOX_CONF" "$@" &> $LOG/openbox
